---
import {ResetPasswordForm} from "@/components/auth/ResetPasswordForm";
import Layout from "@/layouts/Layout.astro";
---

<Layout title='Resetowanie hasła | 10xCards'>
  <div class='container max-w-md mx-auto py-8'>
    <div class='text-center mb-8'>
      <h1 class='text-2xl font-bold mb-2'>Nie pamiętasz hasła?</h1>
      <p class='text-gray-600'>Podaj swój adres email, a wyślemy Ci link do zresetowania hasła</p>
    </div>

    <div class='bg-white p-8 rounded-lg shadow-md'>
      <ResetPasswordForm client:load onSubmit={(data) => console.log(data)} />
    </div>
  </div>
</Layout>
