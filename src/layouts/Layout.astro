---
import {Navigation} from "@/components/Navigation";
import {Toaster} from "@/components/ui/sonner";
import "@fontsource/inter";
import {Image} from "astro:assets";
import {ViewTransitions} from "astro:transitions";
import bgImage from "../assets/images/backgrounds/bg-img.jpg";
import "../styles/global.css";

interface Props {
  title: string;
}

const {title} = Astro.props;
const user = Astro.locals.user ?? null;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/png' href='/favicon.png' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class='sm:bg-gray-100'>
    <div class='min-h-screen w-full relative'>
      <div class='fixed inset-0 -z-10 hidden sm:block overflow-hidden' aria-hidden='true'>
        <div class='absolute inset-0 w-[100vw] h-[100vh]'>
          <div class='absolute inset-0 w-full h-full'>
            <Image
              src={bgImage}
              alt='A background image of a blue lights abstraction'
              title='ZdjÄ™cie dodane przez Marek Piwnicki: https://www.pexels.com/pl-pl/zdjecie/jasny-lekki-swiatla-niebieski-12489187/'
              class='w-full h-full object-cover'
              quality='max'
            />
          </div>
        </div>
      </div>
      <div class='min-h-screen w-full sm:container sm:mx-auto sm:px-4 sm:py-6'>
        <div
          class='sm:bg-white/95 sm:backdrop-blur-sm sm:rounded-2xl sm:shadow-xl sm:min-h-[calc(100vh-3rem)] overflow-hidden'
        >
          <Toaster richColors />
          <Navigation user={user} client:load />
          <main class='container mx-auto px-4 pb-6 pt-16'>
            <slot />
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
